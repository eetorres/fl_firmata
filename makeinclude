CXX = g++

PROG = fl_firmata_test
SUFX = _linux64
SCRS = $(PROG).cxx fl_firmata.cxx Fl_Scope.cxx Fl_Pin_Table.cxx CFirmata.cxx serial.cxx
OBJS = $(SCRS:.cxx=.o)

MDIR = $(shell sh -c pwd)

OPTIM  = -O2 -Wall -Wno-deprecated
LMATH = -lm
LX11R =
LFLTK = $(shell fltk-config  --use-gl --ldstaticflags)

CFLAGS = $(OPTIM) -c
LFLAGS = $(OPTIM) $(LFLTK) $(LX11R)

.SUFFIXES:	.cxx .o .h

.cxx.o:
	$(CXX) $(CFLAGS) $< -o $@
